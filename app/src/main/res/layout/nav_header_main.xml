<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="@dimen/nav_header_height"
              android:background="@drawable/side_nav_bar"
              android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <ImageView
        android:id="@+id/profile_image"
        android:layout_alignParentStart="true"
        android:layout_centerInParent="true"
        android:layout_marginStart="@dimen/apace_16"
        android:layout_width="@dimen/circle_image"
        android:layout_height="@dimen/circle_image"/>

    <TextView
        android:layout_marginTop="@dimen/apace_15"
        android:id="@+id/textView"
        android:textSize="@dimen/text_size_16"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/apace_16"
        android:layout_marginStart="@dimen/apace_16"
        android:textColor="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/motto"/>

</RelativeLayout>
