<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:elevation="@dimen/apace_3"
             android:background="@drawable/daily_meizhi_bg"
             android:layout_margin="@dimen/apace_4"
             android:orientation="vertical"
             android:layout_width="match_parent"
             android:layout_height="wrap_content">

    <yyl.yungirl.widget.MyImageView
        android:id="@+id/iv_meizhi_pic"
        android:padding="@dimen/apace_2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:adjustViewBounds="true"
        android:transitionName="picture"
        android:scaleType="centerCrop"/>

    <TextView
        android:id="@+id/tv_update_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        android:layout_margin="@dimen/apace_16"
        android:textColor="#94ED88"
        android:textSize="@dimen/text_size_24"
        android:textStyle="bold"
        android:visibility="visible"
        tools:background="#414A50"
        tools:text="2016年6月12"/>
</FrameLayout>